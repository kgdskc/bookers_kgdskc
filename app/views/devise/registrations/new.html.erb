<div class = "container">
  <div class = "row">
    <div class = "col-md-12 text-center">
      <h2 class="mt-4 mb-5 head-line title_h2">新規会員登録</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group col-md-12 mt-5">
          <%= f.label :ニックネーム, class: "col-md-4 control-label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-4", placeholder: '読書太郎' %>
        </div>

        <div class="form-group col-md-12">
          <%= f.label :メールアドレス, class: "col-md-4 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4", placeholder: 'test@example.com' %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード, class: "col-md-4 control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-md-4 form-control-static password", placeholder: 'パスワード' %>
        </div>

        <div class="form-group">
          <%= f.label :（確認用）, class: "col-md-4 control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-4 form-control-static password", placeholder: '（確認用）' %>
        </div>

        <div class="actions mt-5">
          <%= f.submit "新規登録", class: "actions btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
